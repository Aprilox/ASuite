{
  "name": "asuite",
  "version": "1.6.0",
  "private": true,
  "description": "ASuite - Suite collaborative professionnelle",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "start": "pnpm --filter @asuite/web start",
    "lint": "turbo lint",
    "clean": "turbo clean && rm -rf node_modules",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "db:seed": "pnpm --filter @asuite/database db:seed",
    "db:studio": "pnpm --filter @asuite/database studio",
    "db:admin": "pnpm --filter @asuite/database admin:create"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
